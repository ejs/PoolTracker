        <li class="empty" onClick="set_pool(this);"></li>
        <li class="empty" onClick="set_pool(this);"></li>
        <li class="empty" onClick="set_pool(this);"></li>
        <li class="empty" onClick="set_pool(this);"></li>
        <li class="empty" onClick="set_pool(this);"></li>
      </ul>
